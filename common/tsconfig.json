{
  "compilerOptions": {
    // 1. THE MODERN COMBO
    // "esnext" + "bundler" allows clean imports without .js extensions
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "bundler",

    // 2. Output & Interop
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    
    // 3. Strictness
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["."]
}