generator client {
  provider = "prisma-client"
 output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  
}



model User {
  // --- Identity ---
  id            String    @id @default(uuid())
  googleId      String?   @unique @map("google_id")
  fullName      String    @map("full_name")
  email         String    @unique
  username      String    @unique
  passwordHash  String?    @map("password_hash")
  isAdmin       Boolean   @default(false) @map("is_admin")
  
  // --- Profile ---
  avatar        String?
  cloudinaryId   String?    @map("cloudinary_id")
  bio           String?
  
  // --- E2E Security ---
  // The Public Key is mandatory. A user cannot exist without an encryption identity.
  publicKey     String?    @map("public_key")
  refreshToken  String?    @map("refresh_token")
  
  // Optional encrypted backup of their private key
  keyBackup     String?   @map("key_backup")

  // --- Metadata ---
  isPro         Boolean   @default(false) @map("is_pro")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")


  @@map("users") // Table name should be plural lowercase
}


