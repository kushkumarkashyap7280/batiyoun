{
  "name": "batiyoun-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "End-to-end encrypted Progressive Web App for private messaging",
  "author": "Kush Kumar <kushkumar.officialsoftwaredev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kushkumarkashyap7280/batiyoun.git"
  },
  "homepage": "https://batiyoun.vercel.app",
  "bugs": {
    "url": "https://github.com/kushkumarkashyap7280/batiyoun/issues"
  },
  "keywords": [
    "chat",
    "messaging",
    "pwa",
    "end-to-end-encryption",
    "privacy",
    "nextjs",
    "websocket",
    "real-time"
  ],
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build -w client && npm run build -w server",
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
